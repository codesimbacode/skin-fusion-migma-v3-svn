<window>
	<allowoverlay>no</allowoverlay>
	<defaultcontrol always="false">101</defaultcontrol>
	<coordinates>
		<system>1</system>
		<posx>0</posx>
		<posy>0</posy>
	</coordinates>
	<controls>
		<control type="group">
			<posx></posx>
			<posy></posy>
			<animation effect="slide" start="600,0" end="0,0" time="400" tween="quadratic" easing="out" condition="!Player.ShowCodec">WindowOpen</animation>
			<animation effect="slide" start="600,0" end="0,0" time="400" delay="400" tween="quadratic" easing="out" condition="Player.ShowCodec">WindowOpen</animation>
			<animation effect="slide" start="0,0" end="600,0" time="200" tween="quadratic" easing="out">WindowClose</animation>
			
			<control type="image">
				<description>media info background image</description>
				<posx>0</posx>
				<posy>135</posy>
				<width>1280</width>
				<height>380</height>
				<texture>black.png</texture>
				<aspectratio>stretch</aspectratio>
				<colordiffuse>c4ffffff</colordiffuse>
			</control>

			<control type="image">
				<description>media info background image</description>
				<posx>0</posx>
				<posy>135</posy>
				<width>1280</width>
				<height>1</height>
				<texture>white.png</texture>
				<aspectratio>stretch</aspectratio>
				<colordiffuse>20ffffff</colordiffuse>
			</control>
	
			<control type="image">
				<description>media info background image</description>
				<posx>0</posx>
				<posy>515</posy>
				<width>1280</width>
				<height>1</height>
				<texture>white.png</texture>
				<aspectratio>stretch</aspectratio>
				<colordiffuse>20ffffff</colordiffuse>
			</control>

			<!-- ** Required ** Do not change <id> or <type> (Text box for lyrics) -->
			<control type="textbox" id="100">
				<description>textarea</description>
				<posx>100</posx>
				<posy>165</posy>
				<width>1080</width>
				<height>500</height>
				<align>center</align>
				<font>movietitle6</font>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<onup>100</onup>
				<ondown>100</ondown>
				<onleft>101</onleft>
				<onright>101</onright>
				<pagecontrol>101</pagecontrol>
			</control>

			<!-- ** Required ** Do not change <id> or <type> (Smooth scrolling list for lyrics) -->
			<control type="list" id="110">
				<posx>0</posx>
				<posy>165</posy>
				<width>1280</width>
				<height>325</height>
				<onleft>111</onleft>
				<onright>120</onright>
				<onup>110</onup>
				<ondown>110</ondown>
				<align>center</align>
				<pagecontrol>111</pagecontrol>
				<scrolltime>200</scrolltime>
				<itemlayout height="40">
					<control type="label">
						<posx>640</posx>
						<posy>0</posy>
						<width>1080</width>
						<height>40</height>
						<font>movietitle6</font>
						<textcolor>EEFFFFFF</textcolor>
						<aligny>center</aligny>
						<align>center</align>
						<selectedcolor>selected</selectedcolor>
						<info>ListItem.Label</info>
					</control>
					<control type="label">
						<posx>640</posx>
						<posy>0</posy>
						<width>1080</width>
						<height>40</height>
						<font>movietitle6</font>
						<aligny>center</aligny>
						<align>center</align>
						<textcolor>AFC0C0C0</textcolor>
						<label fallback="-------------------------------------------------------------------------------------">$INFO[ListItem.Label]</label>
						<visible>Control.HasFocus(110)</visible>
					</control>
				</itemlayout>
				<focusedlayout height="40">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>1280</width>
						<height>40</height>
						<texture>button2fo.png</texture>
						<aspectratio>stretch</aspectratio>
					</control>
					<control type="label">
						<posx>640</posx>
						<posy>0</posy>
						<width>1080</width>
						<height>40</height>
						<font>movietitle6</font>
						<textcolor>FFFFFFFF</textcolor>
						<aligny>center</aligny>
						<align>center</align>
						<selectedcolor>white</selectedcolor>
						<label>$INFO[ListItem.Label]</label>
						<visible>!Control.HasFocus(110)</visible>
					</control>
					<control type="label">
						<posx>640</posx>
						<posy>0</posy>
						<width>1080</width>
						<height>40</height>
						<font>movietitle6</font>
						<aligny>center</aligny>
						<align>center</align>
						<textcolor>FFFFFFFF</textcolor>
						<label fallback="-------------------------------------------------------------------------------------">$INFO[ListItem.Label]</label>
						<visible>Control.HasFocus(110)</visible>
					</control>
				</focusedlayout>
			</control>
			<control type="label" id="2">
				<description>Pick label</description>
				<posx>30</posx>
				<posy>130</posy>
				<width>550</width>
				<height>30</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>heading</font>
				<label>31203</label>
				<textcolor>white</textcolor>
				<visible>Control.IsVisible(120) + ![Control.IsVisible(100) | Control.IsVisible(110)]</visible>
			</control>
			<!-- ** Required ** Do not change <id> or <type> (Song Chooser if it gets it wrong) -->
			<control type="list" id="120">
				<posx>100</posx>
				<posy>170</posy>
				<width>1080</width>
				<height>440</height>
				<onleft>121</onleft>
				<onright>121</onright>
				<onup>120</onup>
				<ondown>120</ondown>
				<pagecontrol>121</pagecontrol>
				<scrolltime>200</scrolltime>
				<animation effect="slide" start="0,0" end="20,0" time="0" condition="!Control.IsVisible(121)">Conditional</animation>
				<itemlayout height="40">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>550</width>
						<height>41</height>
						<texture border="5">button2fo.png</texture>
						<aspectratio>stretch</aspectratio>
					</control>
					<control type="label">
						<posx>10</posx>
						<posy>0</posy>
						<width>530</width>
						<height>40</height>
						<font>heading</font>
						<align>center</align>
						<aligny>center</aligny>
						<selectedcolor>white</selectedcolor>
						<info>ListItem.Label</info>
					</control>
				</itemlayout>
				<focusedlayout height="40">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>550</width>
						<height>41</height>
						<visible>!Control.HasFocus(120)</visible>
						<texture border="5">MenuItemNF.png</texture>
						<aspectratio>stretch</aspectratio>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>550</width>
						<height>41</height>
						<visible>Control.HasFocus(120)</visible>
						<texture border="5">MenuItemFO.png</texture>
						<aspectratio>stretch</aspectratio>
					</control>
					<control type="label">
						<posx>10</posx>
						<posy>0</posy>
						<width>530</width>
						<height>40</height>
						<font>heading</font>
						<align>center</align>
						<aligny>center</aligny>
						<selectedcolor>white</selectedcolor>
						<info>ListItem.Label</info>
					</control>
				</focusedlayout>
			</control>
			<control type="spincontrol" id="121">
				<description>Next page button</description>
				<description>Next page button</description>
				<posx>0</posx>
				<posy>-50</posy>
				<subtype>page</subtype>
				<font>heading</font>
				<onleft>120</onleft>
				<onright>120</onright>
				<ondown>120</ondown>
				<onup>120</onup>
				<textcolor>white</textcolor>
				<showonepage>true</showonepage>
				<visible>Control.IsVisible(120)</visible>
			</control>
			<control type="label">
				<description>Scraper label</description>
				<posx>0</posx>
				<posy>-50</posy>
				<width>550</width>
				<height>30</height>
				<label>$LOCALIZE[31205] - $INFO[Control.GetLabel(200)]</label>
				<font>heading</font>
				<align>left</align>
				<aligny>center</aligny>
				<textcolor>FFC0C0C0</textcolor>
			</control>
			<control type="label" id="200">
				<description>Scraper label</description>
				<visible>false</visible>
			</control>
		</control>
		<!-- ** Required ** Do not change <id> or <type> -->
		<!-- ** Required ** Do not change <id> or <type> -->
	</controls>
</window>