						<posx>0</posx>
						<posy>65</posy>
						<width>384</width>
						<height>270</height>
						<aspectratio>stretch</aspectratio>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<animation reversible="false" effect="zoom" start="100" end="135" center="auto" time="200">focus</animation>
						<animation reversible="false" effect="zoom" start="115" end="100" center="auto" time="200">unfocus</animation>
						<animation effect="zoom" start="100" end="75" time="0" condition="true">true</animation>
					</control>
				</control>
				</focusedlayout>
			</control>

